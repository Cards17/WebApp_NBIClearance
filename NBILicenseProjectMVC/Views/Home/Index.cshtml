@model IEnumerable<NBILicenseProjectMVC.Models.Applicant>
@{
    ViewData["Title"] = "Index";
}

<br />
<h1 style="text-align:center">Home Page</h1>
<br />
<br />
<hr />
<div style="text-align:left">
    @using (Html.BeginForm("Index", "Applicant", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    @Html.RadioButton("searchBy", "Firstname", true)
                    <text> First Name</text>
                    @Html.RadioButton("searchBy", "Lastname")
                    <text> Last Name</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue", null, new{Class="form-control",placeholder="Enter First/Last Name"})
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-success" />
                </td>
                <td> &nbsp; </td>
            </tr>

        </table> <br />
    }
</div>

<br>
<div class="d-flex justify-content-center table table-hover table-striped">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicantPicture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Middlename)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValidId)
                <th>
                        @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.CivilStatus)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.EducationalAttainment)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.LandlineNumber)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Complexion)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Peculiarities)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Religion)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.HusbandOrWifeName)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.FatherName)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.FatherBirthplace)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.MotherName)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.MotherBirthplace)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="font-family:'Segoe UI'; font-size: 14px">
                    <td>
                        <img src="@item.ApplicantPicture" class="rounded mx-auto d-block" style="overflow: hidden; position: relative; width:100px; height:100px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Middlename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CivilStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EducationalAttainment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LandlineNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td class="text-justify" id="textbox" style="width:60px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complexion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peculiarities)
                    </td>
                    <td class="text-justify" id="textbox" style="width:60px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.Religion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HusbandOrWifeName)
                    </td>
                    <td class="text-justify" id="textbox" style="width:100px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>
                    <td class="text-justify" id="textbox" style="width:100px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.FatherBirthplace)
                    </td>
                    <td class="text-justify" id="textbox" style="width:100px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.MotherName)
                    </td>
                    <td class="text-justify" id="textbox" style="width:100px; height:60px; word-wrap: break-word">
                        @Html.DisplayFor(modelItem => item.MotherBirthplace)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="Applicant" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
